@model LOST_AND_FOUND.Models.FoundItem

@{
    ViewData["Title"] = "Details";
}


<div>
    <div class="text-center">
        <h2>@Model.Title</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h6>Posted at @Model.PostTime</h6>
        </div>
         <div class="col-md-6 text-lg-end">
             <span>Found by </span><a class="btn btn-info" asp-controller="Home" asp-action="UserDetails" asp-route-email="@Model.FoundBy">@Html.DisplayFor(model => model.FoundBy)</a>
        </div>
        <div class="col-md-12 text-center">
            <img style="height:400px;border-radius:10px" src="@("~/image/"+Model.PictureName)" asp-append-version="true" />
        </div>
         <div class="col-md-2"></div>
         <div class="col-md-8 text-center mt-3">
            <h5>@Model.Description</h5>
        </div>
         <div class="col-md-2"></div>
        
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <div class="mb-5"></div>
</div>
