@model LOST_AND_FOUND.Models.LostItem

@{
    ViewData["Title"] = "Details";
}


<div>
     <div class="text-center">
        <h2>@Model.Title</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h6>@Model.PostTime</h6>
        </div>
         <div class="col-md-6 text-lg-end">
             <a class="btn btn-info" asp-controller="Home" asp-action="UserDetails" asp-route-email="@Model.LostBy">@Html.DisplayFor(model => model.LostBy)</a>

        </div>
        <div class="col-md-12 text-center">
            <img style="height:400px" src="@("~/image/"+Model.PictureName)" asp-append-version="true" />
        </div>

        <div class="col-md-2"></div>

         <div class="col-md-8 text-center mt-3">
            <h5>@Model.Description</h5>
        </div>
         <div class="col-md-2"></div>
        
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
